# Ask the user what to do
/usr/local/share/CirrusOpen/CirrusOpenLeaveSession.py
case "$?" in
	255)
		# Logout
		/usr/bin/gnome-session-save --logout
		;;

	254)
		# Disconnect
		sudo /usr/local/share/CirrusOpen/CirrusOpenNXDisconnect
		;;
esac

exit 0
