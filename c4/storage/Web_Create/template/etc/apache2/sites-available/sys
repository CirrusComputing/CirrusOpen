<VirtualHost [-IP_ADDRESS-]:80>
    ServerAdmin webmaster@[-DOMAIN-]
    ServerName sys
    ServerAlias sys

    DocumentRoot /var/www/acc/root
    Alias /static /var/www/acc/root/static

    Alias / /var/www/acc/script/cirrusopen_accountmanager_cgi.pl

    RewriteEngine On
    RewriteLogLevel 9
    RewriteLog /var/log/apache2/rewrite.log
    RewriteCond %{REQUEST_URI} !^/?script/cirrusopen_accountmanager_cgi.pl
    RewriteCond %{REQUEST_URI} !^/static/
    RewriteRule ^/?(.*)$ /var/www/acc/script/cirrusopen_accountmanager_cgi.pl/$1

    <Directory "/var/www/acc/script">
        Options +ExecCGI
        SetHandler cgi-script
    </Directory>

    <Location "/">
        AuthType Kerberos
        AuthName "Account Manager"
        KrbAuthRealms [-REALM-]
        Krb5Keytab /etc/apache2/apache2.keytab
        KrbMethodNegotiate on
        KrbMethodK5Passwd off
        KrbSaveCredentials off
        Require valid-user
    </Location>

    # Possible values include: debug, info, notice, warn, error, crit, alert, emerg.
    LogLevel info
    ErrorLog /var/log/apache2/error.log
    CustomLog /var/log/apache2/access.log combined
    ServerSignature Off
</VirtualHost>

