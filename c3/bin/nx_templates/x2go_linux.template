SESSION_ID=[-SESSION_ID-]
SESSION_NAME=[-SESSION_NAME-]
USERNAME=[-USERNAME-]
SERVER_HOST=[-SERVER_HOST-]
SERVER_PORT=[-SERVER_PORT-]
PROXY_ENABLED=[-PROXY_ENABLED-]
PROXY_HOST=[-PROXY_HOST-]
PROXY_PORT=[-PROXY_PORT-]
RESOLUTION_WIDTH=[-RESOLUTION_WIDTH-]
RESOLUTION_HEIGHT=[-RESOLUTION_HEIGHT-]
FULLSCREEN=[-FULLSCREEN-]
CONNECTION_SPEED=[-CONNECTION_SPEED-]

SESSION_CONF_FILE=$HOME/.x2goclient/session-$SESSION_NAME-$SESSION_ID
SESSION_CONF="[$SESSION_ID]
speed=$CONNECTION_SPEED
pack=16m-jpeg
quality=9
fstunnel=true
export=
iconvto=UTF-8
iconvfrom=ISO8859-1
useiconv=false
fullscreen=$FULLSCREEN
multidisp=false
display=1
maxdim=false
rdpclient=rdesktop
directrdpsettings=
width=$RESOLUTION_WIDTH
height=$RESOLUTION_HEIGHT
dpi=96
setdpi=true
xinerama=false
clipboard=both
usekbd=true
type=auto
sound=true
soundsystem=pulse
startsoundsystem=true
soundtunnel=true
defsndport=true
sndport=4713
print=true
name=$SESSION_NAME
icon=:/img/icons/128x128/x2gosession.png
host=$SERVER_HOST
user=$USERNAME
key=
rdpport=3389
sshport=$SERVER_PORT
autologin=false
krblogin=false
krbdelegation=false
directrdp=false
rootless=false
published=false
applications=WWWBROWSER, MAILCLIENT, OFFICE, TERMINAL
command=GNOME
rdpoptions=
rdpserver=
xdmcpserver=localhost
usesshproxy=$PROXY_ENABLED
sshproxytype=HTTP
sshproxyuser=
sshproxykeyfile=
sshproxyhost=$PROXY_HOST
sshproxyport=$PROXY_PORT
sshproxysamepass=true
sshproxysameuser=true
sshproxyautologin=false
sshproxykrblogin=false
"

which x2goclient > /dev/null
if [ $? -ne 0 ]; then
    echo "Please install the X2Go Client first..."
    exit 1
fi

mkdir -p ~/.x2goclient

[ ! -f $SESSION_CONF_FILE ] && echo "$SESSION_CONF" > $SESSION_CONF_FILE

x2goclient --portable --session-conf="$SESSION_CONF_FILE" --sessionid="$SESSION_ID" >/dev/null 2>&1 &

exit 0
